[Unit]
Description=TFT Panel Leakage Control Daemon
After=network.target
Requires=network.target

[Service]
Type=simple
ExecStart=/usr/bin/tft-leakage-daemon
Restart=always
RestartSec=10

# Security hardening
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log /var/run

# SPI device access
DeviceAllow=/dev/spidev0.0 rw

[Install]
WantedBy=multi-user.target
